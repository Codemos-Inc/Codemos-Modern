{
  "name": "codemos-modern",
  "displayName": "Codemos Modern",
  "description": "Innovative, modern theme suite for VS Code",
  "version": "1.1.2",
  "engines": {
    "vscode": "^1.79.0"
  },
  "publisher": "Codemos",
  "author": {
    "name": "Emrecan Karaçayır",
    "url": "https://codemos.dev",
    "email": "dev.emrecan.karacayir@gmail.com"
  },
  "license": "MIT",
  "readme": "README.md",
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#181818",
    "theme": "dark"
  },
  "extensionKind": [
    "ui"
  ],
  "categories": [
    "Themes",
    "Other"
  ],
  "keywords": [
    "theme",
    "codemos",
    "modern",
    "professional",
    "dark",
    "light",
    "codemos modern",
    "modern theme",
    "color theme",
    "vscode",
    "accent",
    "accent color",
    "accent theme",
    "fluent",
    "fluent design",
    "fluent theme",
    "accent",
    "accent color",
    "accent theme",
    "mica",
    "acrylic",
    "windows 11",
    "winui",
    "winui 3",
    "Windows App SDK"
  ],
  "release": {
    "repositoryUrl": "https://github.com/Codemos-Inc/codemos-modern"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Codemos-Inc/codemos-modern"
  },
  "homepage": "https://github.com/Codemos-Inc/codemos-modern",
  "sponsor": {
    "url": "https://github.com/sponsors/EmrecanKaracayir"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/EmrecanKaracayir"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codemos-modern.theme",
        "title": "Codemos Modern: Create Theme"
      }
    ],
    "themes": [
      {
        "label": "Codemos Modern (Light)",
        "uiTheme": "vs",
        "path": "./themes/Codemos Modern (Light)-color-theme.json"
      },
      {
        "label": "Codemos Modern (Dark)",
        "uiTheme": "vs-dark",
        "path": "./themes/Codemos Modern (Dark)-color-theme.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.79.0",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "prettier": "2.8.8",
    "typescript": "^5.0.4"
  }
}

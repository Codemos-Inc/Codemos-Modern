{
  "name": "codemos-modern",
  "displayName": "Codemos Modern",
  "publisher": "Codemos",
  "icon": "res/icon.gif",
  "description": "%ext.desc%",
  "pricing": "Free",
  "version": "2.9.0",
  "license": "MIT",
  "homepage": "https://github.com/Codemos-Inc/Codemos-Modern",
  "repository": {
    "type": "git",
    "url": "https://github.com/Codemos-Inc/Codemos-Modern"
  },
  "bugs": {
    "url": "https://github.com/Codemos-Inc/Codemos-Modern/issues",
    "email": "developer@karacayir.com"
  },
  "sponsor": {
    "url": "https://github.com/sponsors/EmrecanKaracayir"
  },
  "galleryBanner": {
    "color": "#171717",
    "theme": "dark"
  },
  "extensionKind": [
    "ui"
  ],
  "categories": [
    "Themes"
  ],
  "keywords": [
    "theme",
    "dark",
    "light",
    "modern",
    "minimal"
  ],
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": true
    }
  },
  "engines": {
    "vscode": "^1.94.0"
  },
  "activationEvents": [
    "*"
  ],
  "main": "out/bin/main.js",
  "l10n": "l10n",
  "contributes": {
    "commands": [
      {
        "command": "codemosModern.configure",
        "title": "%command.configure%"
      },
      {
        "command": "codemosModern.authenticate",
        "title": "%command.authenticate%"
      }
    ],
    "themes": [
      {
        "label": "Codemos Modern (Dark)",
        "uiTheme": "vs-dark",
        "path": "./themes/Codemos Modern (Dark)-color-theme.json"
      },
      {
        "label": "Codemos Modern (Light)",
        "uiTheme": "vs",
        "path": "./themes/Codemos Modern (Light)-color-theme.json"
      }
    ],
    "configuration": [
      {
        "properties": {
          "codemosModern.auxiliaryThemeRegistries": {
            "order": 0,
            "scope": "window",
            "type": "array",
            "default": [
              "Codemos-Inc/Auxiliary-Theme-Registry"
            ],
            "minItems": 1,
            "markdownDescription": "%conf.auxiliaryThemeRegistries.desc%",
            "pattern": "^[a-zA-Z0-9-]+/[a-zA-Z0-9._-]+$",
            "patternErrorMessage": "%conf.auxiliaryThemeRegistries.err%"
          }
        }
      },
      {
        "title": "%conf.textDec.title%",
        "properties": {
          "codemosModern.textDecorations.strikethrough": {
            "order": 0,
            "scope": "window",
            "type": "boolean",
            "default": true,
            "markdownDescription": "%conf.textDec.strikethrough.desc%"
          },
          "codemosModern.textDecorations.bold": {
            "order": 1,
            "scope": "window",
            "type": "boolean",
            "default": true,
            "markdownDescription": "%conf.textDec.bold.desc%"
          },
          "codemosModern.textDecorations.italic": {
            "order": 2,
            "scope": "window",
            "type": "boolean",
            "default": true,
            "markdownDescription": "%conf.textDec.italic.desc%"
          },
          "codemosModern.textDecorations.underline": {
            "order": 3,
            "scope": "window",
            "type": "boolean",
            "default": false,
            "markdownDescription": "%conf.textDec.underline.desc%"
          },
          "codemosModern.textDecorations.forComments": {
            "order": 4,
            "scope": "window",
            "type": "array",
            "items": {
              "type": "string",
              "enum": [
                "strikethrough",
                "bold",
                "italic",
                "underline"
              ],
              "enumDescriptions": [
                "%conf.textDec.forComments.enum.sThrough.desc%",
                "%conf.textDec.forComments.enum.bold.desc%",
                "%conf.textDec.forComments.enum.italic.desc%",
                "%conf.textDec.forComments.enum.underline.desc%"
              ]
            },
            "default": [
              "italic"
            ],
            "markdownDescription": "%conf.textDec.forComments.desc%"
          }
        }
      },
      {
        "title": "%conf.dark.title%",
        "properties": {
          "codemosModern.dark.auxiliaryUiTheme": {
            "order": 0,
            "scope": "window",
            "type": [
              "string",
              "null"
            ],
            "default": null,
            "markdownDescription": "%conf.dark.auxiliaryUiTheme.desc%",
            "pattern": "^[a-zA-Z0-9-]+/[a-zA-Z0-9._-]+/.+/.+/.+$",
            "patternErrorMessage": "%conf.dark.auxiliary*Theme.err%"
          },
          "codemosModern.dark.design": {
            "order": 1,
            "scope": "window",
            "type": "string",
            "default": "modern",
            "enum": [
              "modern",
              "natural",
              "minimal",
              "flat"
            ],
            "enumDescriptions": [
              "%conf.*.design.enum.modern.desc%",
              "%conf.*.design.enum.natural.desc%",
              "%conf.*.design.enum.minimal.desc%",
              "%conf.*.design.enum.flat.desc%"
            ],
            "markdownDescription": "%conf.dark.design.desc%"
          },
          "codemosModern.dark.accentColor": {
            "order": 2,
            "scope": "window",
            "type": "string",
            "default": "#CB8569",
            "markdownDescription": "%conf.dark.accentColor.desc%",
            "pattern": "^#[0-9A-Fa-f]{6}$",
            "patternErrorMessage": "%conf.dark.*Color.err%"
          },
          "codemosModern.dark.adaptationColor": {
            "order": 3,
            "scope": "window",
            "type": "string",
            "default": "#CB8569",
            "markdownDescription": "%conf.dark.adaptationColor.desc%",
            "pattern": "^#[0-9A-Fa-f]{6}$",
            "patternErrorMessage": "%conf.dark.*Color.err%"
          },
          "codemosModern.dark.adaptationIntensity": {
            "order": 4,
            "scope": "window",
            "type": "integer",
            "default": 0,
            "minimum": 0,
            "maximum": 100,
            "markdownDescription": "%conf.dark.adaptationIntensity.desc%"
          },
          "codemosModern.dark.auxiliaryCodeTheme": {
            "order": 5,
            "scope": "window",
            "type": [
              "string",
              "null"
            ],
            "default": null,
            "markdownDescription": "%conf.dark.auxiliaryCodeTheme.desc%",
            "pattern": "^[a-zA-Z0-9-]+/[a-zA-Z0-9._-]+/.+/.+/.+$",
            "patternErrorMessage": "%conf.dark.auxiliary*Theme.err%"
          },
          "codemosModern.dark.codeColors": {
            "order": 6,
            "scope": "window",
            "type": "object",
            "additionalProperties": false,
            "description": "%%",
            "properties": {
              "scope00": {
                "type": "string",
                "markdownDescription": "%%",
                "pattern": "^#[0-9A-Fa-f]{6}$",
                "patternErrorMessage": "%conf.dark.*Color.err%"
              },
              "scope01": {
                "type": "string",
                "markdownDescription": "%%",
                "pattern": "^#[0-9A-Fa-f]{6}$",
                "patternErrorMessage": "%conf.dark.*Color.err%"
              },
              "scope02": {
                "type": "string",
                "markdownDescription": "%%",
                "pattern": "^#[0-9A-Fa-f]{6}$",
                "patternErrorMessage": "%conf.dark.*Color.err%"
              },
              "scope03": {
                "type": "string",
                "markdownDescription": "%%",
                "pattern": "^#[0-9A-Fa-f]{6}$",
                "patternErrorMessage": "%conf.dark.*Color.err%"
              },
              "scope04": {
                "type": "string",
                "markdownDescription": "%%",
                "pattern": "^#[0-9A-Fa-f]{6}$",
                "patternErrorMessage": "%conf.dark.*Color.err%"
              },
              "scope05": {
                "type": "string",
                "markdownDescription": "%%",
                "pattern": "^#[0-9A-Fa-f]{6}$",
                "patternErrorMessage": "%conf.dark.*Color.err%"
              },
              "scope06": {
                "type": "string",
                "markdownDescription": "%%",
                "pattern": "^#[0-9A-Fa-f]{6}$",
                "patternErrorMessage": "%conf.dark.*Color.err%"
              },
              "scope07": {
                "type": "string",
                "markdownDescription": "%%",
                "pattern": "^#[0-9A-Fa-f]{6}$",
                "patternErrorMessage": "%conf.dark.*Color.err%"
              },
              "scope08": {
                "type": "string",
                "markdownDescription": "%%",
                "pattern": "^#[0-9A-Fa-f]{6}$",
                "patternErrorMessage": "%conf.dark.*Color.err%"
              },
              "scope09": {
                "type": "string",
                "markdownDescription": "%%",
                "pattern": "^#[0-9A-Fa-f]{6}$",
                "patternErrorMessage": "%conf.dark.*Color.err%"
              },
              "scope10": {
                "type": "string",
                "markdownDescription": "%%",
                "pattern": "^#[0-9A-Fa-f]{6}$",
                "patternErrorMessage": "%conf.dark.*Color.err%"
              },
              "scope11": {
                "type": "string",
                "markdownDescription": "%%",
                "pattern": "^#[0-9A-Fa-f]{6}$",
                "patternErrorMessage": "%conf.dark.*Color.err%"
              },
              "scope12": {
                "type": "string",
                "markdownDescription": "%%",
                "pattern": "^#[0-9A-Fa-f]{6}$",
                "patternErrorMessage": "%conf.dark.*Color.err%"
              },
              "scope13": {
                "type": "string",
                "markdownDescription": "%%",
                "pattern": "^#[0-9A-Fa-f]{6}$",
                "patternErrorMessage": "%conf.dark.*Color.err%"
              },
              "scope14": {
                "type": "string",
                "markdownDescription": "%%",
                "pattern": "^#[0-9A-Fa-f]{6}$",
                "patternErrorMessage": "%conf.dark.*Color.err%"
              },
              "scope15": {
                "type": "string",
                "markdownDescription": "%%",
                "pattern": "^#[0-9A-Fa-f]{6}$",
                "patternErrorMessage": "%conf.dark.*Color.err%"
              },
              "scope16": {
                "type": "string",
                "markdownDescription": "%%",
                "pattern": "^#[0-9A-Fa-f]{6}$",
                "patternErrorMessage": "%conf.dark.*Color.err%"
              }
            },
            "default": {
              "scope00": true,
              "scope01": true,
              "scope02": true,
              "scope03": true,
              "scope04": true,
              "scope05": true,
              "scope06": true,
              "scope07": true,
              "scope08": true,
              "scope09": true,
              "scope10": true,
              "scope11": true,
              "scope12": true,
              "scope13": true,
              "scope14": true,
              "scope15": true,
              "scope16": true
            }
          }
        }
      },
      {
        "title": "%conf.light.title%",
        "properties": {
          "codemosModern.light.auxiliaryUiTheme": {
            "order": 0,
            "scope": "window",
            "type": [
              "string",
              "null"
            ],
            "default": null,
            "markdownDescription": "%conf.light.auxiliaryUiTheme.desc%",
            "pattern": "^[a-zA-Z0-9-]+/[a-zA-Z0-9._-]+/.+/.+/.+$",
            "patternErrorMessage": "%conf.light.auxiliary*Theme.err%"
          },
          "codemosModern.light.design": {
            "order": 1,
            "scope": "window",
            "type": "string",
            "default": "modern",
            "enum": [
              "modern",
              "natural",
              "minimal",
              "flat"
            ],
            "enumDescriptions": [
              "%conf.*.design.enum.modern.desc%",
              "%conf.*.design.enum.natural.desc%",
              "%conf.*.design.enum.minimal.desc%",
              "%conf.*.design.enum.flat.desc%"
            ],
            "markdownDescription": "%conf.light.design.desc%"
          },
          "codemosModern.light.accentColor": {
            "order": 2,
            "scope": "window",
            "type": "string",
            "default": "#784F3F",
            "markdownDescription": "%conf.light.accentColor.desc%",
            "pattern": "^#[0-9A-Fa-f]{6}$",
            "patternErrorMessage": "%conf.light.*Color.err%"
          },
          "codemosModern.light.adaptationColor": {
            "order": 3,
            "scope": "window",
            "type": "string",
            "default": "#784F3F",
            "markdownDescription": "%conf.light.adaptationColor.desc%",
            "pattern": "^#[0-9A-Fa-f]{6}$",
            "patternErrorMessage": "%conf.light.*Color.err%"
          },
          "codemosModern.light.adaptationIntensity": {
            "order": 4,
            "scope": "window",
            "type": "integer",
            "default": 0,
            "minimum": 0,
            "maximum": 100,
            "markdownDescription": "%conf.light.adaptationIntensity.desc%"
          },
          "codemosModern.light.auxiliaryCodeTheme": {
            "order": 5,
            "scope": "window",
            "type": [
              "string",
              "null"
            ],
            "default": null,
            "markdownDescription": "%conf.light.auxiliaryCodeTheme.desc%",
            "pattern": "^[a-zA-Z0-9-]+/[a-zA-Z0-9._-]+/.+/.+/.+$",
            "patternErrorMessage": "%conf.light.auxiliary*Theme.err%"
          }
        }
      }
    ]
  },
  "lint-staged": {
    "*.ts": "eslint --fix",
    "*.{ts,json,md}": "prettier --write"
  },
  "dependencies": {
    "@octokit/rest": "^21.0.1",
    "@resvg/resvg-js": "^2.6.0",
    "axios": "^1.6.5",
    "jsdom": "^25.0.0"
  },
  "devDependencies": {
    "@types/jsdom": "^21.1.6",
    "@types/node": "^22.5.1",
    "@types/vscode": "^1.79.0",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "esbuild": "^0.24.0",
    "eslint": "^9.9.1",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^9.0.10",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "tsx": "^4.16.2",
    "typescript": "^5.0.4",
    "typescript-eslint": "^8.3.0"
  },
  "scripts": {
    "prepare": "husky",
    "clean": "rm -rf out && rm -rf data/.state.json && rm -rf data/cache/*",
    "winClean": "if exist out (rmdir /s /q out 2>nul) && if exist data\\.state.json (del /q data\\.state.json 2>nul) && if exist data\\cache (rmdir /s /q data\\cache 2>nul)",
    "format": "prettier --write .",
    "lint": "eslint src && tsc --noEmit",
    "beforeBuild": "npm run clean && npm run format && npm run lint",
    "winBeforeBuild": "npm run winClean && npm run format && npm run lint",
    "compile:badges": " tsx src/hooks/compileBadges.ts",
    "compile:stateFile": "tsx src/hooks/compileStateFile.ts",
    "compile:themes": "tsx src/hooks/compileThemes.ts",
    "compile": "tsc",
    "compile-all": "npm run compile && npm run compile:stateFile && npm run compile:themes",
    "package:dev": "node esbuild.js --dev",
    "package:prod": "node esbuild.js --prod",
    "build": "npm run beforeBuild && npm run compile-all && npm run package:prod",
    "winBuild": "npm run winBeforeBuild && npm run compile-all && npm run package:prod",
    "debug": "DEBUG=1 && npm run beforeBuild && npm run compile-all && npm run package:dev",
    "winDebug": "set \"DEBUG=1\" && npm run winBeforeBuild && npm run compile-all && npm run package:dev"
  }
}

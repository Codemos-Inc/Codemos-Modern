{
  "name": "codemos-modern",
  "displayName": "Codemos Modern",
  "description": "Innovative, carefully crafted theme suite for VS Code",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.79.0"
  },
  "publisher": "Codemos",
  "author": {
    "name": "Emrecan Karaçayır",
    "url": "https://codemos.dev",
    "email": "dev.emrecan.karacayir@gmail.com"
  },
  "license": "MIT",
  "readme": "README.md",
  "icon": "./images/icon.png",
  "galleryBanner": {
    "color": "#181818",
    "theme": "dark"
  },
  "extensionKind": [
    "ui"
  ],
  "categories": [
    "Themes",
    "Other"
  ],
  "keywords": [
    "theme",
    "codemos",
    "modern",
    "professional",
    "dark",
    "light",
    "codemos modern",
    "modern theme",
    "color theme",
    "vscode",
    "accent",
    "accent color",
    "accent theme",
    "fluent",
    "fluent design",
    "fluent theme",
    "accent",
    "accent color",
    "accent theme",
    "mica",
    "acrylic",
    "windows 11",
    "winui",
    "winui 3",
    "Windows App SDK"
  ],
  "release": {
    "repositoryUrl": "https://github.com/Codemos-Inc/codemos-modern"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Codemos-Inc/codemos-modern"
  },
  "homepage": "https://github.com/Codemos-Inc/codemos-modern",
  "sponsor": {
    "url": "https://github.com/sponsors/EmrecanKaracayir"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/EmrecanKaracayir"
  },
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codemos-modern.theme",
        "title": "Codemos Modern: Create Theme"
      }
    ],
    "themes": [
      {
        "label": "Codemos Modern (Light)",
        "uiTheme": "vs",
        "path": "./themes/Codemos Modern (Light)-color-theme.json"
      },
      {
        "label": "Codemos Modern (Dark)",
        "uiTheme": "vs-dark",
        "path": "./themes/Codemos Modern (Dark)-color-theme.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/vscode": "^1.79.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.0.4"
  }
}

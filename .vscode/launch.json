{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Extension",
      "type": "extensionHost",
      "request": "launch",
      "args": ["--extensionDevelopmentPath=${workspaceFolder}"],
      "outFiles": ["${workspaceFolder}/out/bin/*.js"],
      "preLaunchTask": "npm: debug"
    },
    {
      "name": "Debug Extension (Win)",
      "type": "extensionHost",
      "request": "launch",
      "args": ["--extensionDevelopmentPath=${workspaceFolder}"],
      "outFiles": ["${workspaceFolder}/out/bin/*.js"],
      "preLaunchTask": "npm: winDebug"
    }
  ]
}
